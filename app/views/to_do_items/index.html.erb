

<h1>Senior Checklist</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @to_do_items.each do |to_do_item| %>
      <tr>
       <td><input type="checkbox"><%= to_do_item.item %></td>
        <td><%= link_to 'Show', to_do_item %></td>
        <td><%= link_to 'Edit', edit_to_do_item_path(to_do_item) %></td>
        <td><%= link_to 'Destroy', to_do_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

