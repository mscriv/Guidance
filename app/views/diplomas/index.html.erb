<h1>Listing diplomas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Requirement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requirement.diplomas.each do |diploma| %>
      <tr>
        <td><%= diploma.name %></td>
        <td><%= diploma.requirement.year %></td>
        <td><%= link_to 'View Subjects', diploma_subjects_path(diploma) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Diploma', new_requirement_diploma_path %>
<%= link_to 'Back to Requirements', requirements_path %>