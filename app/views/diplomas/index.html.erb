<h1>Listing diplomas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Requirement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diplomas.each do |diploma| %>
      <tr>
        <td><%= diploma.name %></td>
        <td><%= diploma.requirement %></td>
        <td><%= link_to 'Show', diploma %></td>
        <td><%= link_to 'Edit', edit_diploma_path(diploma) %></td>
        <td><%= link_to 'Destroy', diploma, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Diploma', new_diploma_path %>
