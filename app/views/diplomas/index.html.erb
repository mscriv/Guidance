<h1> Graduation Requirements</h1>

<table>
  <thead>
    <tr>
      <th>Diploma Name</th>
      <th>Requirement Year</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requirement.diplomas.each do |diploma| %>
      <tr>
        <td><%= diploma.name %></td>
        <td><%= diploma.requirement.year %></td>
        <td><%= diploma.requirement.description%></td>
        </tr>


      </tbody>
      </table>

<% diploma.subjects.each do |subject| %>
            <h3>Subjects:</h3>
            <p>Name: <%= subject.name %></p>
            <p>Requisite: <%= subject.requisite %></p>

        <% end %>

  <% end %>






<%= link_to 'New Diploma', new_requirement_diploma_path %>
<%= link_to 'Back to Requirements', requirements_path %>