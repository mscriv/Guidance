<h1><%= @list.month %></h1>

<ul class="items">
  <% @list.items.each do |item| %>
  <li>
    <%= item.name %>
    <%= link_to 'Edit Item', edit_list_item_path(item) %>
    <%= link_to 'Delete Item', list_item_path(item), method: :delete, data: {confirm: 'Are you sure?'} %>

  </li>

	  <% end %>
</ul>

<%= link_to 'New Item', new_list_item_path %>
<%= link_to 'Checklist', lists_path %>
