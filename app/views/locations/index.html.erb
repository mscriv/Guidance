

 <div class="text-center">
  <h2><%= @test.name %></h2>
  <h2>Test date: <%= @test.test_date %></h2>

  <h3>Registration Deadline: <%= @test.registration_deadline %></h3>

</div>
<table id="customers", class= "table table-striped">
  <thead>
    <tr class="alt">
      <th>School</th>
      <th>Test code</th>
      <th>School code</th>
      <th>Test</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @test.locations.each do |location| %>
      <tr>
        <td><%= location.school %></td>
        <td><%= location.test_code %></td>
        <td><%= location.school_code %></td>
        <td><%= location.test.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


  <%= link_to 'Back to Tests', tests_path %>

