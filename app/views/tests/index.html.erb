<div class="container">
  <%= form_tag search_tests_path, class: 'form' do %>
      <%= text_field_tag "search_query", nil, placeholder: 'Search text' %>
      <%= submit_tag "Search", class: 'radius button tiny' %>
  <% end %>
</div>


<h1>SAT/ACT Test Dates</h1>
<%= paginate @tests %>


<table class="table table-striped table-bordered table-collapse">
  <thead>
    <tr>
      <th><%= link_to 'Test name', sort: 'name'%></th>
      <th><%= link_to 'Test date', sort: 'test_date'%></th>
      <th><%= link_to 'Registration deadline', sort: 'registration_deadline' %></th>
      <th>Locations</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.name %></td>
        <td><%= test.test_date %></td>
        <td><%= test.registration_deadline %></td>
        <td><%= link_to 'View', test_locations_path(test) %></td>
        <td><%= test.description %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Test', new_test_path %>
